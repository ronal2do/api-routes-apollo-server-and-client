{
  "expo": {
    "name": "ReciclaAPP",
    "scheme": "ReciclaAPP",
    "slug": "ReciclaAPP",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2A3E52"
    },
    
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.stq.reciclaapp",
      "buildNumber": "1.1.31",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "ReciclaAPP gostaria de ter acesso a suas fotos, para personalizar o seu avatar",
        "NSCameraUsageDescription": "ReciclaAPP gostaria de ter acesso a sua camera, para personalizar o seu avatar"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#2A3E52"
      },
      "package": "com.stq.reciclaapp",
      "versionCode": 28,
      "googleServicesFile": "./keys/google-services.json",
      "permissions": []
    },
    "plugins": [
      [
        "expo-media-library",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos.",
          "savePhotosPermission": "Allow $(PRODUCT_NAME) to save photos.",
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera."
        }
      ], 
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera."
        }
      ]
    ]
  }
}
